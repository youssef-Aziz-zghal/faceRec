<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="true">
        <shape>

            <gradient android:angle="90" android:endColor="#8C87FB" android:startColor="#8C87FB" />

            <corners android:bottomLeftRadius="20dp" android:bottomRightRadius="20dp" android:topLeftRadius="20dp" android:topRightRadius="20dp" />
        </shape>
    </item>
    <item android:state_enabled="false">
        <shape>

            <gradient

                android:angle="90" android:endColor="#7F8C87FB" android:startColor="#7F8C87FB" />

            <corners android:bottomLeftRadius="20dp" android:bottomRightRadius="20dp" android:topLeftRadius="20dp" android:topRightRadius="20dp" />

        </shape>
    </item>
</selector>
