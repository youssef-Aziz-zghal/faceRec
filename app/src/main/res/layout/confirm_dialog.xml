<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dialog_inset"
    android:padding="@dimen/default_margin_horizontal">

    <TextView
        android:id="@+id/dialog_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/margin_title_top"
        android:text=""
        android:theme="@style/TextViewTitleStyle" />

    <TextView
        android:id="@+id/dialog_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/dialog_title"
        android:layout_marginHorizontal="@dimen/default_margin_horizontal"
        android:layout_marginTop="@dimen/default_margin_vertical"
        android:text=""
        android:theme="@style/TextViewMessageStyle" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/dialog_margin_bottom"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/dialog_button_cancel"
            android:layout_width="@dimen/button_width"
            android:layout_height="@dimen/button_height"
            android:layout_marginHorizontal="@dimen/default_margin_horizontal"
            android:text="@string/dialog_cancel"
            android:theme="@style/ButtonCancel" />

        <Button
            android:id="@+id/dialog_button_confirm"
            android:layout_width="@dimen/button_width"
            android:layout_height="@dimen/button_height"
            android:layout_marginHorizontal="@dimen/default_margin_horizontal"
            android:text="@string/confirm"
            android:theme="@style/Button" />
    </LinearLayout>
</RelativeLayout>
